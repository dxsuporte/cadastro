<%- include('../include/body'); %>

<div class="container-full m-3">
  <div id="divRegister" class="form-group">
    <fieldset class="border rounded p-2">
      <legend class="w-auto h6"><i class="bi bi-pencil-square"></i> <b>Gerenciar Registros</b></legend>
      <form action="#">
        <div class="form-row">
          <input type="text" id="idProduct" hidden />
          <div class="form-group col-md-6 col-lg-4 col-xl-3">
            <label for="description">Especialidade</label>
            <input id="description" type="text" class="form-control form-control-sm" autofocus />
          </div>
          <div class="form-group col-md-6 col-lg-4 col-xl-3">
            <label for="note">Atuação</label>
            <input id="note" type="text" class="form-control form-control-sm" />
          </div>
          <div class="form-group col-md-6 col-lg-4 col-xl-3">
            <label for="name">Nome</label>
            <input id="name" type="text" class="form-control form-control-sm" />
          </div>
          <div class="form-group col-md-6 col-lg-4 col-xl-3">
            <label for="surname">Andar</label>
            <input id="surname" type="text" class="form-control form-control-sm" />
          </div>
          <div class="form-group col-md-6 col-lg-4 col-xl-3">
            <label for="phone">Telefone</label>
            <input id="phone" type="text" class="form-control form-control-sm" />
          </div>
          <div class="form-group col-md-6 col-lg-4 col-xl-3">
            <label for="obs">Observação</label>
            <input id="obs" type="text" class="form-control form-control-sm" />
          </div>
          <div class="form-group col-sm-2 col-md-2 d-flex align-items-end">
            <button id="createUpdate" type="submit" class="btn btn-primary btn-sm mr-1"><i class="bi bi-check-circle-fill"></i> Salvar</button>
            <button id="destroy" type="button" class="btn btn-danger btn-sm mr-1 d-none"><i class="bi bi-trash-fill"></i> Deletar</button>
          </div>
        </div>
      </form>
    </fieldset>
  </div>
  <div class="form-group">
    <fieldset class="border rounded p-2">
      <legend class="w-auto h6"><i class="bi bi-table"></i> <b>Lista de registros</b></legend>
      <div class="form-row align-items-center">
        <div class="mr-auto">
          <span class="counter text-muted ml-2"></span>
        </div>
        <div class="ml-auto mr-2">
          <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="bi bi-search"></i></span>
            </div>
            <input type="text" class="search form-control form-control-sm" placeholder="Procurar..." />
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-hover table-bordered table-sm text-center results">
          <thead class="thead-light">
            <tr>
              <th scope="col">Especialidade</th>
              <th scope="col">Atuação</th>
              <th scope="col">Nome</th>
              <th scope="col">Andar</th>
              <th scope="col">Telefone</th>
            </tr>
          </thead>
          <tbody id="tbody"></tbody>
        </table>
      </div>
    </fieldset>
  </div>
</div>

<%- include('../include/footer'); %>
