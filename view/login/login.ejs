<%- include('../include/head') %>

<!-- Start Header -->
<header class="text-center">
  <strong><%- TITLE %></strong>
</header>
<!-- Stop Header -->

<section>
  <div class="container p-5">
    <form action="#">
      <div class="form-group text-center">
        <img class="img-rounded" src="<%- process.env.BASE_URL %>/public/img/favicon.png" width="75" height="75" alt="" />
      </div>
      <div class="form-group">
        <div class="input-group input-group-sm">
          <div class="input-group-prepend">
            <span class="input-group-text"><%- USER.icon %></span>
          </div>
          <input id="username" type="text" autofocus class="form-control" placeholder="<%- USER.name %>..." />
        </div>
      </div>
      <div class="form-group">
        <div class="input-group input-group-sm">
          <div class="input-group-prepend">
            <span class="input-group-text"><%- PASSWORD.icon %></span>
          </div>
          <input id="password" type="password" class="form-control" placeholder="<%- PASSWORD.name %>..." />
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="mr-auto">
            <button id="cancel" type="button" class="btn btn-secondary btn-sm"><%- CANCEL.icon %> <%- CANCEL.name %></button>
          </div>
          <div class="ml-auto">
            <button id="login" type="submit" class="btn btn-primary btn-sm"><%- LOGIN.icon %> <%- LOGIN.name %></button>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

<%- include('../include/footer'); %>
