{
  "name": "crud-electron",
  "productName": "Cadastro",
  "version": "2.0.0",
  "description": "Basic registration",
  "license": "MIT",
  "repository": "https://github.com/dxsuporte/crud-electron",
  "main": "main.js",
  "homepage": "",
  "author": {
    "name": "DX Suporte - Danilo Xavier",
    "email": "dxsuporteti@gmail.com",
    "url": "https://dxsuporte.com.br"
  },
  "scripts": {
    "start": "electron .",
    "packager-linux": "electron-packager . --overwrite --asar true --platform linux --arch x64 --icon ./public/img/favicon.png --prune false --out build/ --productName Cadastro",
    "packager-win": "electron-packager . --overwrite --asar true --platform win32 --arch x64 --icon ./public/img/favicon.ico --prune false --out build/ --version-string.CompanyName CE --version-string.FileDescription CE --version-string.ProductName \"Cadastro\"",
    "deb": "electron-installer-debian --src build/*-linux-x64/ --dest build/ --arch amd64 --icon ./public/img/favicon.png --bin Cadastro"
  },
  "prettier": {
    "endOfLine": "lf",
    "trailingComma": "es5",
    "arrowParens": "always",
    "quoteProps": "consistent",
    "semi": false,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": false,
    "tabWidth": 2,
    "printWidth": 180
  },
  "devDependencies": {
    "@electron/packager": "^18.3.2",
    "electron": "^29.1.5",
    "electron-installer-debian": "^3.2.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "ejs-electron": "^3.0.0",
    "knex": "^3.1.0",
    "mysql2": "^3.9.3",
    "sqlite3": "^5.1.7"
  }
}
