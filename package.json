{
  "name": "crud-electron",
  "productName": "Cadastro b√°sico",
  "version": "1.0.0",
  "description": "Basic registration",
  "main": "main.js",
  "homepage": "",
  "author": {
    "name": "DX Suporte - Danilo Xavier",
    "email": "dxsuporteti@gmail.com",
    "url": "https://dxsuporte.com.br"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win"
  },
  "build": {
    "appId": "com.dxsuporte.${name}",
    "artifactName": "${productName}-${version}-${os}_${arch}.${ext}",
    "asar": false,
    "buildDependenciesFromSource": true,
    "win": {
      "icon": "./public/img/favicon.ico",
      "target": [
        "zip"
      ]
    },
    "linux": {
      "icon": "./public/img/favicon.svg",
      "category": "Development",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.bz2",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 180
  },
  "devDependencies": {
    "electron": "^23.2.1",
    "electron-builder": "^24.13.3",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7"
  }
}
