{
  "name": "app-desktop",
  "version": "1.0.0",
  "description": "app desktop",
  "main": "main.js",
  "homepage": "",
  "author": {
    "name": "DX Suporte - Danilo Xavier",
    "email": "dxsuporteti@gmail.com",
    "url": "https://dxsuporte.com.br"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win"
  },
  "build": {
    "productName": "APP DESKTOP",
    "asar": false,
    "linux": {
      "icon": "./public/img/favicon.svg",
      "target": [
        "deb",
        "tar.bz2"
      ]
    },
    "win": {
      "icon": "./public/img/favicon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "lf",
    "jsxBracketSameLine": false
  },
  "devDependencies": {
    "electron": "^23.2.1",
    "electron-builder": "^24.13.3",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7"
  }
}
