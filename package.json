{
  "name": "crud-electron",
  "productName": "Cadastro",
  "version": "1.0.0",
  "description": "Basic registration",
  "license": "MIT",
  "repository": "https://github.com/dxsuporte/crud-electron",
  "main": "main.js",
  "homepage": "",
  "author": {
    "name": "DX Suporte - Danilo Xavier",
    "email": "dxsuporteti@gmail.com",
    "url": "https://dxsuporte.com.br"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "compile-linux": "electron-packager . budget --platform=linux --arch=x64 --asar=false --prune=false --overwrite --out=build/ --icon=./public/img/favicon.png",
    "compile-win": "electron-packager . budget --platform=win32 --arch=x64 --asar=false --prune=false --overwrite --out=build/ --icon=./public/img/favicon.ico --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"budget\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.dxsuporte.${name}",
    "artifactName": "${productName}-${version}-${os}_${arch}.${ext}",
    "asar": true,
    "buildDependenciesFromSource": true,
    "asarUnpack": "**\\*.{node,dll}",
    "win": {
      "icon": "./public/img/favicon.ico",
      "target": [
        "zip"
      ]
    },
    "linux": {
      "icon": "./public/img/favicon.svg",
      "category": "Development",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.bz2",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 180
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^23.2.1",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "knex": "^3.1.0"
  }
}
